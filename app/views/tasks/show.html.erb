<ul class="list-unstyled m-3">
  <li><%= @task.title%></li>
  <li><%= @task.details%></li>
  <%# <li><%= @task.completed ? <i class="fa fa-check-square-o"></i> This task is completed : <i class="fa fa-square-o"></i> This task is not completed %>
    <% if @task.completed %>
    <i class="fa-solid fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>
</ul>

<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Home", root_path %>
